# Email Router - Environment Variables Template
# Copy this file to .secrets/.env and fill in your actual values
# NEVER commit files with actual secrets to git!

# =============================================================================
# GOOGLE AI API CONFIGURATION
# =============================================================================

# Primary API key for Gemini AI (email analysis, classification, drafting)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_ai_api_key_here

# Alternative API key (backup or for different services if needed)
# GOOGLE_API_KEY_BACKUP=your_backup_api_key_here

# =============================================================================
# GMAIL API CONFIGURATION
# =============================================================================

# Gmail API uses OAuth2 credentials (oauth_client.json + token.json)
# Download oauth_client.json from Google Cloud Console
# token.json is generated automatically during OAuth2 flow

# =============================================================================
# GOOGLE CLOUD PROJECT CONFIGURATION
# =============================================================================

# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Pub/Sub topic for Gmail notifications (format: projects/PROJECT_ID/topics/TOPIC_NAME)
PUBSUB_TOPIC=projects/your-project-id/topics/email-inbound

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Cloud Function region
CLOUD_FUNCTION_REGION=us-central1

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable detailed logging for debugging (true/false)
DEBUG_MODE=true 
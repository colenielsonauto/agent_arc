# Email Router - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# =============================================================================
# LLM Provider Settings
# =============================================================================
LLM_DEFAULT_PROVIDER=anthropic
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-pro

# OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=your-org-id-here

# Anthropic (optional)
ANTHROPIC_API_KEY=sk-ant-api03-your-actual-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# Email Provider Settings
# =============================================================================
EMAIL_DEFAULT_PROVIDER=mailgun
EMAIL_POLLING_INTERVAL=60
EMAIL_BATCH_SIZE=50

# Gmail Configuration
GMAIL_CREDENTIALS_PATH=.secrets/oauth_client.json
GMAIL_TOKEN_PATH=.secrets/token.json

# Mailgun (optional)
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_BASE_URL=https://api.mailgun.net

# =============================================================================
# Memory Store Settings
# =============================================================================
MEMORY_DEFAULT_STORE=redis
EMBEDDING_DIMENSION=1536
MEMORY_DEFAULT_TTL=86400

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Pinecone (optional)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX=your-pinecone-index

# PostgreSQL (optional)
DATABASE_URL=postgresql://user:password@localhost/email_router

# =============================================================================
# Analytics & Monitoring
# =============================================================================
ANALYTICS_DEFAULT_SINK=prometheus
ENABLE_TRACING=true
ENABLE_METRICS=true
SAMPLING_RATE=1.0

# Prometheus
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# Datadog (optional)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# LangSmith (optional)
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=email-router

# =============================================================================
# Security Settings
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=15

# Encryption
USE_ENCRYPTION=true
ENCRYPTION_KEY=your-base64-encoded-encryption-key-here

# Key Management (optional)
VAULT_URL=https://vault.your-company.com
VAULT_TOKEN=your-vault-token

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_MEMORY=true
ENABLE_ANALYTICS=true
ENABLE_MULTI_AGENT=false
ENABLE_WEBHOOKS=true

# =============================================================================
# Google Cloud Settings (for deployment)
# =============================================================================
FUNCTION_NAME=email-router
FUNCTION_REGION=us-central1
PUBSUB_TOPIC=email-inbound
PUBSUB_SUBSCRIPTION=email-inbound-sub

# =============================================================================
# Processing Settings
# =============================================================================
MAX_RETRIES=3
RETRY_DELAY=5 
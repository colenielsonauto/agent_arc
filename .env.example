# Email Router - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# =============================================================================
# LLM Provider Settings
# =============================================================================
LLM_DEFAULT_PROVIDER=google
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# Google Gemini
GOOGLE_API_KEY=your_gemini_api_key_here
GOOGLE_MODEL=gemini-1.5-pro

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=your_openai_org_id

# Anthropic (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# =============================================================================
# Email Provider Settings
# =============================================================================
EMAIL_DEFAULT_PROVIDER=gmail
EMAIL_POLLING_INTERVAL=60
EMAIL_BATCH_SIZE=50

# Gmail Configuration
GMAIL_CREDENTIALS_PATH=.secrets/oauth_client.json
GMAIL_TOKEN_PATH=.secrets/token.json

# Mailgun (optional)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain.com

# =============================================================================
# Memory Store Settings
# =============================================================================
MEMORY_DEFAULT_STORE=redis
EMBEDDING_DIMENSION=1536
MEMORY_DEFAULT_TTL=86400

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Pinecone (optional)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX=email-memories

# PostgreSQL (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/emailrouter

# =============================================================================
# Analytics & Monitoring
# =============================================================================
ANALYTICS_DEFAULT_SINK=prometheus
ENABLE_TRACING=true
ENABLE_METRICS=true
SAMPLING_RATE=1.0

# Prometheus
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# Datadog (optional)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# LangSmith (optional)
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=email-router

# =============================================================================
# Security Settings
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your_256_bit_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=15

# Encryption
USE_ENCRYPTION=true
ENCRYPTION_KEY=your_encryption_key_here

# Key Management (optional)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_MEMORY=true
ENABLE_ANALYTICS=true
ENABLE_MULTI_AGENT=false
ENABLE_WEBHOOKS=true

# =============================================================================
# Google Cloud Settings (for deployment)
# =============================================================================
FUNCTION_NAME=email-router
FUNCTION_REGION=us-central1
PUBSUB_TOPIC=email-inbound
PUBSUB_SUBSCRIPTION=email-inbound-sub

# =============================================================================
# Processing Settings
# =============================================================================
MAX_RETRIES=3
RETRY_DELAY=5 